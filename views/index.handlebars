<div class="container">
	<div class="row">
		<div class="col-md-12" id="header">
            <h1>GLOBO-BURGER</h1>
			<img src="/assets/img/burger.png">
		</div>
		<div class="col-md-6" id="burgers">
			<div class="row">
			    {{#each burger_data}}
			  	{{#unless this.devoured}}
                    <div class="col-md-6">
                        <pre>{{this.id}}. {{this.burger_name}}
                        </pre>
                    </div>
                    <div class="col-md-6">
                        <form id="devourBtn">
                            <input input type="hidden" class="burger_id" value={{this.id}}><br>
                            <button type="submit" class="btn btn-danger">Devour burger!</button>
                        </form>
                    </div>
				{{/unless}}
			    {{/each}}
			</div>
		</div>
		<div class="col-md-6" id="devouredBurgers">
			{{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="devoured" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
			    {{/if}}
			{{/each}}
		</div>
	</div>
    <br>
    <br>
	<div class="row">
		<div class="col-md-12" id="newBurgers">
            <p>To create a new, personalized burger, enter its name below!</p>
			<form action="/burgers/create" method="POST">
				<input id="newBurger" name="burger_name" placeholder="Add your burger here!">
				<button type="submit" class="btn btn-primary" id="newBurgerBtn">Submit</button>
			</form>
		</div>
	</div>
</div>

